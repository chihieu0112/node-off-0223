<% const collection="category" ; const linkPrefix='admin' ; const linkThumb='' ; %>
    <div class="card card-info card-outline">
        <form action="addItem" method="POST" enctype="multipart/form-data" class="mb-0">
            <div class="card-body">
                <h1>Form</h1>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" id="name-input-form" name="name" class="form-control form-control-sm">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="slug" class="col-sm-2 col-form-label text-sm-right required">Slug</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" name="slug" id="slug-input-form" class="form-control form-control-sm">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="desc" class="col-sm-2 col-form-label text-sm-right required">Description</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="text" name="desc" class="form-control form-control-sm">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="thumbnail" class="col-sm-2 col-form-label text-sm-right required">Thumbnail</label>
                    <div class="col-xs-12 col-sm-8">
                        <input type="file" name="thumbnail" class="form-control form-control-sm" id="file-input">
                    </div>
                    <img id="preview"></img>
                </div>
                <div class="form-group row">
                    <label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select id="status" name="status" class="custom-select custom-select-sm">
                            <option value="">Choose Status</option>
                            <option value="active">
                                Active</option>
                            <option value="inactive">
                                Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="category" class="col-sm-2 col-form-label text-sm-right">Category</label>
                    <div class="col-xs-12 col-sm-8">
                        <select id="category" name="category" class="custom-select custom-select-sm">
                            <option value="0">Choose Category</option>
                            <option value="0">Unknown</option>
                            <% categoryListObj.forEach((item) => { %>
                                <option value="<%= item.id %>"><%= item.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="content" class="col-sm-2 col-form-label text-sm-right">Content</label>
                    <div class="col-xs-12 col-sm-8">
                        <textarea name="content" id="editor">
                            &lt;p&gt;This is some sample content.&lt;/p&gt;
                        </textarea>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-12 col-sm-8 offset-sm-2">
                    <button id="btn" type="submit" class="btn btn-sm btn-success mr-1">
                        Submit</button>
                    <a href="/admin/category" class="btn btn-sm btn-danger mr-1">
                        Cancel</a>
                </div>
            </div>
        </form>

    </div>